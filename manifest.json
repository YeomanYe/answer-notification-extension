{
   "background": {
      "scripts": ["lib/jquery.min.js", "js/constant.js","js/utils.js","js/baseStoreObj.js"]
   },
   "browser_action": {
      // "default_icon": "images/icon/logo.png",
      "default_popup": "popup.html",
      "default_title": "跟帖通知器"
   },
   "content_scripts": [{
      "js": ["lib/jquery.min.js","js/constant.js", "js/utils.js","js/baseStoreObj.js","js/cnt/preprocess.js","js/cnt/segmentfault-cnt.js"],
      "css": ["css/content.css"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_end"
   }],
   "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
   "icons": {
   },
   "manifest_version": 2,
   "name": "跟帖通知器",
   "options_page": "popup.html",
   "permissions": ["http://*/*", "https://*/*", "notifications", "storage", "unlimitedStorage"],
   "version": "1.0.0",
   "web_accessible_resources": ["remote/*", "manifest.json", "images/*", "_locales/*"]
}